<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-4.2.xsd">

    <bean id="dateFormat" class="java.text.SimpleDateFormat">
        <constructor-arg value="yyyy-MM-dd" />
    </bean>

    <bean id="user1" class="learn.spring.entity.User">
        <constructor-arg value="1"/>
        <constructor-arg value="vasya@mail.com"/>
        <constructor-arg value="Valiliy"/>
        <constructor-arg value="Pupkin"/>
        <constructor-arg>
            <bean factory-bean="dateFormat" factory-method="parse">
                <constructor-arg value="1989-01-18" />
            </bean>
        </constructor-arg>
    </bean>

    <bean id="user2" class="learn.spring.entity.User">
        <constructor-arg value="2"/>
        <constructor-arg value="ivan@mail.com"/>
        <constructor-arg value="Ivan"/>
        <constructor-arg value="Petrov"/>
        <constructor-arg>
            <bean factory-bean="dateFormat" factory-method="parse">
                <constructor-arg value="1972-07-08" />
            </bean>
        </constructor-arg>
    </bean>

    <bean id="user3" class="learn.spring.entity.User">
        <constructor-arg value="3"/>
        <constructor-arg value="orest@mail.com"/>
        <constructor-arg value="Orest"/>
        <constructor-arg value="Lytui"/>
        <constructor-arg>
            <bean factory-bean="dateFormat" factory-method="parse">
                <constructor-arg value="1992-02-07" />
            </bean>
        </constructor-arg>
    </bean>

    <bean id="user4" class="learn.spring.entity.User">
        <constructor-arg value="4"/>
        <constructor-arg value="orest_next@mail.com"/>
        <constructor-arg value="Orest"/>
        <constructor-arg value="Melin"/>
        <constructor-arg>
            <bean factory-bean="dateFormat" factory-method="parse">
                <constructor-arg value="1999-11-13" />
            </bean>
        </constructor-arg>
    </bean>


</beans>